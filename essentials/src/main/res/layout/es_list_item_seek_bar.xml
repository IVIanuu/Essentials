<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:minHeight="64dp">

    <FrameLayout
        android:id="@+id/es_list_leading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/es_list_leading"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/es_list_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/es_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/es_seekbar_value"
                tools:progress="70" />

            <TextView
                android:id="@+id/es_seekbar_value"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="36dp"
                android:visibility="gone"
                android:gravity="end|center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:singleLine="true"
                android:textAppearance="?textAppearanceBody2"
                android:textColor="?android:textColorSecondary"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:ellipsize="marquee"
                tools:text="1000%"
                android:fadingEdge="horizontal" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>