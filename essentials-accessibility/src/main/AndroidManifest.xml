<manifest package="com.ivianuu.essentials.accessibility"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application>
        <service
            android:name=".ComponentAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:process="@string/es_accessibility_service_process">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/es_accessibility_service_config" />
        </service>
    </application>

</manifest>