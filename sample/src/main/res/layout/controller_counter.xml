<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline3"
            android:transitionName="count" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/screen_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen Up" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/screen_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen Down" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/root_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Root Screen" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/list_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Screen" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/twilight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark mode" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nav_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nav Bar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/check_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check apps" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/do_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do Work" />

    </LinearLayout>

</ScrollView>