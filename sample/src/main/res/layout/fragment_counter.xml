<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/decrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrease" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/screen_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Up" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/screen_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Down" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/root_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Root Screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/list_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/state_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/do_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Work" />

</LinearLayout>